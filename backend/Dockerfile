FROM python:3.12-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

COPY pyproject.toml .
COPY app/ app/
COPY engine/ engine/
COPY alembic/ alembic/
COPY alembic.ini .

RUN pip install --no-cache-dir .

ENV PYTHONPATH=/app

EXPOSE 8000
